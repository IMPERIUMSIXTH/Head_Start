{
  "name": "headstart-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-End tests for HeadStart platform using Playwright",
  "private": true,
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:desktop": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:critical": "playwright test tests/critical/",
    "test:auth": "playwright test tests/auth/",
    "test:user": "playwright test tests/user/",
    "test:mobile-responsive": "playwright test tests/mobile/",
    "test:accessibility": "playwright test tests/accessibility/",
    "test:performance": "playwright test tests/performance/",
    "test:cross-browser": "playwright test --project=chromium --project=firefox --project=webkit --project='Microsoft Edge' --project='Google Chrome'",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:retry": "playwright test --retries=2",
    "test:timeout": "playwright test --timeout=60000",
    "test:reporter-html": "playwright test --reporter=html",
    "test:reporter-json": "playwright test --reporter=json",
    "test:reporter-junit": "playwright test --reporter=junit",
    "test:trace": "playwright test --trace=on",
    "test:video": "playwright test --video=on",
    "test:screenshot": "playwright test --screenshot=only-on-failure",
    "install-browsers": "playwright install --with-deps",
    "install-browsers-chromium": "playwright install chromium --with-deps",
    "install-browsers-firefox": "playwright install firefox --with-deps",
    "install-browsers-webkit": "playwright install webkit --with-deps",
    "show-report": "playwright show-report",
    "codegen": "playwright codegen",
    "codegen-mobile": "playwright codegen --device='iPhone 12'",
    "codegen-tablet": "playwright codegen --device='iPad Pro'",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf test-results/ playwright-report/ test-results-*/",
    "run-python-runner": "python e2e_test_runner.py",
    "run-all-suites": "python e2e_test_runner.py",
    "run-critical-tests": "python e2e_test_runner.py --critical",
    "run-mobile-tests": "python e2e_test_runner.py --mobile",
    "run-suite": "python e2e_test_runner.py --suite"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "rimraf": "^5.0.5",
    "@axe-core/playwright": "^4.8.2",
    "lighthouse": "^11.4.0",
    "playwright-lighthouse": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "e2e",
    "testing",
    "playwright",
    "automation",
    "headstart",
    "cross-browser",
    "mobile",
    "accessibility",
    "performance"
  ],
  "author": "HeadStart Development Team",
  "license": "MIT"
}